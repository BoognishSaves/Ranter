<!DOCTYPE html>
<html lang="en">
  <header class="NPheader">
    <%- include('partials/header.ejs'); %>
  </header>
    <head>
      <meta charset="UTF-8" />
      <meta http-equiv="X-UA-Compatible" content="IE=edge" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <link rel="stylesheet" href="/styles/main.css"/>
    </head>

  <body class="NPbody">
    <section>
      <div>
        <h1 class="NewPost">New Post</h1>
      </div>
    </section>
    <main class="NPcontainer">
      <div>
        <form class="NPform" action="/post" method="POST">
          <div>
            <input 
            class="NPinput"
            type="text" 
            placeholder="username" 
            name="username" 
            id="NPusername" />
          </div>
          <div>
            <input
              class="NPinput"
              type="text"
              placeholder="What's happening?"
              name="post"
              id="NPpost"
            />
          </div>
          <button class="NPbutton">Create Post</button>
        </form>
      </div>
    </main>
  </body>
</html>
