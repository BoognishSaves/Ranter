<!DOCTYPE html>
<html lang="en">
     <header class="PIheader">
        <%- include('partials/header.ejs'); %>
      </header>
        <head>
            
          <meta charset="UTF-8" />
          <meta http-equiv="X-UA-Compatible" content="IE=edge" />
          <meta name="viewport" content="width=device-width, initial-scale=1.0" />
          <link rel="stylesheet" href="/styles/main.css"/>
        </head>
   
    <body id="PIbody">
        <nav class="NPnav">
        <%- include('partials/nav.ejs'); %>
        </nav>  
        <section class="PIsection">
            <div class="PItitle">
                <h2>Rant Feed</h2>
            <div>
                <img src="<%=user.image%> " >
            </div>        
            </div>
        <main class="PIcontainer">
            <div class="PIdiv" id="PIposts">
                <% for( let i = 0; i<posts.length; i++){ %>
                    <% const firstPost = posts[i] %>
                    <ul class="PIul">
                    <li class="PIli"><a href="/post/<%= firstPost._id %>"><%= firstPost.post %></a> </li>
                    <img src="<%= firstPost.userId.image %>" style="width: 200px; height: 200px; border-radius: 100%; display:block; margin-left: auto; margin-right: auto; object-fit: cover;">
                    <div style="text-align: center"><h3 ><%= firstPost.userId.username %></h3></div>
                    </ul>
                <% } %> 
            </div>
        </main>
    </section>
	</body>
</html>









